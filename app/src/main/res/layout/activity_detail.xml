<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/primary"
    tools:context=".Ui.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:verticalScrollbarPosition="left"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_img_back"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"/>

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_back_arrow" />

                <ImageView
                    android:id="@+id/item_img"
                    android:layout_width="108dp"
                    android:layout_height="169.2dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="88dp"/>

                <TextView
                    android:id="@+id/item_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="110dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#292D36"
                app:cardCornerRadius="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ratingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/gray"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="47dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_userCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/gray"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="47dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_chapterCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chapter"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chapter"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/gray"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11.5sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Reading"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="30dp"
                android:background="@drawable/epic_button"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>